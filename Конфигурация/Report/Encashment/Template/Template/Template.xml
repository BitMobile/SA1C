		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	EncashmentEncashmentDocuments.Ref.Visit.SR AS SR,
	AccountReceivableReceivableDocuments.Ref.Outlet,
	EncashmentEncashmentDocuments.Ref.Visit.Outlet.ReceivableLimit AS ReceivableLimit,
	AccountReceivableReceivableDocuments.DocumentName,
	AccountReceivableReceivableDocuments.DocumentSum AS ReceivableSum,
	EncashmentEncashmentDocuments.EncashmentSum,
	AccountReceivableReceivableDocuments.DocumentSum - EncashmentEncashmentDocuments.EncashmentSum AS SumLeft
INTO EncRec
FROM
	Document.Encashment.EncashmentDocuments AS EncashmentEncashmentDocuments
		FULL JOIN Document.AccountReceivable.ReceivableDocuments AS AccountReceivableReceivableDocuments
		ON EncashmentEncashmentDocuments.DocumentName = AccountReceivableReceivableDocuments.DocumentName
WHERE
	(EncashmentEncashmentDocuments.Ref.Date BETWEEN &amp;StartDate AND &amp;EndDate
			OR AccountReceivableReceivableDocuments.Ref.Date BETWEEN &amp;StartDate AND &amp;EndDate)
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED
	SUM(OrderSKUs.Amount) AS OrderAmount,
	OrderSKUs.Ref.Outlet,
	OrderSKUs.Ref.SR
INTO Orders
FROM
	Document.Order.SKUs AS OrderSKUs
WHERE
	OrderSKUs.Ref.Date BETWEEN &amp;StartDate AND &amp;EndDate

GROUP BY
	OrderSKUs.Ref.Outlet,
	OrderSKUs.Ref.SR
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED
	Orders.SR AS SR1,
	CASE
		WHEN Orders.Outlet IS NULL 
			THEN EncRec.Outlet
		ELSE Orders.Outlet
	END AS Outlet1,
	EncRec.ReceivableLimit,
	Orders.OrderAmount,
	EncRec.DocumentName,
	EncRec.ReceivableSum,
	EncRec.EncashmentSum,
	EncRec.SumLeft,
	CASE
		WHEN Orders.OrderAmount = 0
				AND EncRec.ReceivableSum IS NULL 
				AND EncRec.EncashmentSum IS NULL 
			THEN 1
		ELSE CASE
				WHEN Orders.SR IS NULL 
					THEN 0
				ELSE Orders.SR
			END
	END AS Field1
INTO Fin
FROM
	EncRec AS EncRec
		FULL JOIN Orders AS Orders
		ON EncRec.Outlet = Orders.Outlet
			AND EncRec.SR = Orders.SR
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED
	Fin.SR1 AS SR,
	Fin.Outlet1 AS Outlet,
	Fin.ReceivableLimit,
	Fin.OrderAmount,
	Fin.DocumentName,
	Fin.ReceivableSum AS ReceivableAmount,
	Fin.EncashmentSum AS EncashmentAmount,
	Fin.SumLeft AS AmountLeft
FROM
	Fin AS Fin
WHERE
	Fin.Field1 &lt;&gt; 1</query>
