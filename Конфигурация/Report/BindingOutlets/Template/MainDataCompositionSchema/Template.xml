				</v8:item>
			</title>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT
	SUM(1) AS Binded,
	TerritoryOutlets.Outlet
INTO source1
FROM
	Catalog.Territory.Outlets AS TerritoryOutlets

GROUP BY
	TerritoryOutlets.Outlet

UNION ALL

SELECT
	NULL,
	Outlet.Ref
FROM
	Catalog.Outlet AS Outlet
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	SUM(source1.Binded) AS Binded,
	source1.Outlet,
	source1.Outlet.Code
INTO source2
FROM
	source1 AS source1

GROUP BY
	source1.Outlet,
	source1.Outlet.Code
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	source2.Outlet,
	NULL AS Ref,
	NULL AS SR
FROM
	source2 AS source2
WHERE
	source2.Binded IS NULL 

UNION ALL

SELECT
	TerritoryOutlets.Outlet,
	TerritoryOutlets.Ref,
	TerritoryOutlets.Ref.SR
FROM
	Catalog.Territory.Outlets AS TerritoryOutlets</query>
