		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	VisitSKUs.Ref AS Visit,
	COUNT(DISTINCT VisitSKUs.SKU) AS CountOfSKU
INTO Visits
FROM
	Document.Visit.SKUs AS VisitSKUs
WHERE
	VisitSKUs.Ref.Outlet.OutletStatus = VALUE(Enum.OutletStatus.Active)
	AND NOT VisitSKUs.Ref.DeletionMark
{WHERE
	(VisitSKUs.Ref.Date &gt;= BEGINOFPERIOD(&amp;НачалоПериода, DAY)),
	(VisitSKUs.Ref.Date &lt;= ENDOFPERIOD(&amp;КонецПериода, DAY))}

GROUP BY
	VisitSKUs.Ref
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED
	VisitSKUs.SKU,
	VisitSKUs.Answer,
	VisitSKUs.Ref AS Visit,
	VisitSKUs.Ref.Outlet,
	VisitSKUs.SKU.Owner AS SKUGroup,
	Visits.CountOfSKU,
	SKUQuestions.Ref AS Question,
	SKUQuestions.Assignment
FROM
	Visits AS Visits
		INNER JOIN Document.Visit.SKUs AS VisitSKUs
			INNER JOIN Catalog.Question AS SKUQuestions
			ON VisitSKUs.Question = SKUQuestions.Ref
		ON Visits.Visit = VisitSKUs.Ref
WHERE
	NOT SKUQuestions.Assignment = VALUE(Enum.SKUQuestions.EmptyRef)
	AND NOT SKUQuestions.Assignment = VALUE(Enum.SKUQuestions.Snapshot)</query>
