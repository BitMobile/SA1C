		<dataSource>DataSource1</dataSource>
		<query>SELECT ALLOWED
	Visit.SR,
	Visit.Ref,
	Visit.Lattitude,
	Visit.Longitude,
	Visit.GPSDifference,
	Visit.Outlet
INTO vis
FROM
	Document.Visit AS Visit
WHERE
	Visit.Date BETWEEN &amp;DateStart AND &amp;DateEnd
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED
	SUM(OrderSKUs.Amount) AS Amount,
	OrderSKUs.Ref.Visit.Ref
INTO ord
FROM
	Document.Order.SKUs AS OrderSKUs

GROUP BY
	OrderSKUs.Ref.Visit.Ref
;

////////////////////////////////////////////////////////////////////////////////
SELECT ALLOWED
	vis.SR,
	vis.Outlet,
	vis.Ref.Ref AS Visit,
	vis.Lattitude,
	vis.Longitude,
	vis.GPSDifference AS PositionsDifference,
	ord.Amount AS OrderAmount,
	Encashment.EncashmentAmount
FROM
	vis AS vis
		LEFT JOIN ord AS ord
		ON vis.Ref.Ref = ord.VisitRef.Ref
		LEFT JOIN Document.Encashment AS Encashment
		ON vis.Ref.Ref = Encashment.Visit.Ref</query>
	</dataSet>
	<calculatedField>
		<dataPath>VisitPositions</dataPath>
		<expression>String(Lattitude)+", " + String(  Longitude)</expression>
		<title xsi:type="v8:LocalStringType">
			<v8:item>
				<v8:lang>en</v8:lang>
				<v8:content>GPS positions of visit</v8:content>
			</v8:item>
			<v8:item>
				<v8:lang>ru</v8:lang>
				<v8:content>GPS-координаты визита</v8:content>
			</v8:item>
		</title>
	</calculatedField>
	<totalField>
		<dataPath>OrderAmount</dataPath>
		<expression>Sum(OrderAmount)</expression>
	</totalField>
	<totalField>
		<dataPath>EncashmentAmount</dataPath>
