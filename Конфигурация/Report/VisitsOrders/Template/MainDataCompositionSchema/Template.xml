	<dataSource>
		<name>DataSource1</name>
		<dataSourceType>Local</dataSourceType>
	</dataSource>
	<dataSet xsi:type="DataSetQuery">
		<name>DataSet1</name>
		<field xsi:type="DataSetFieldField">
			<dataPath>Outlet</dataPath>
			<field>Outlet</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>SR</dataPath>
			<field>SR</field>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>Amount</dataPath>
			<field>Amount</field>
			<title xsi:type="v8:LocalStringType">
				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>Order Total</v8:content>
				</v8:item>
			</title>
		</field>
		<field xsi:type="DataSetFieldField">
			<dataPath>Date</dataPath>
			<field>Date</field>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT
	SUM(OrderSKUs.Amount) AS Amount,
	OrderSKUs.Ref
INTO VTOrders
FROM
	Document.Order.SKUs AS OrderSKUs

GROUP BY
	OrderSKUs.Ref
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	Visit1.Outlet,
	BEGINOFPERIOD(Visit1.Date, DAY) AS Date,
	Visit1.SR,
	SUM(VTOrders.Amount) AS Amount
FROM
	Document.Visit AS Visit1
		LEFT JOIN VTOrders AS VTOrders
		ON Visit1.Ref = VTOrders.Ref.Visit
WHERE
	Visit1.Date BETWEEN &amp;DateStart AND &amp;DateEnd
	AND Visit1.SR IN(&amp;SRList)

GROUP BY
	Visit1.SR,
	Visit1.Outlet,
	BEGINOFPERIOD(Visit1.Date, DAY)</query>
	</dataSet>
	<totalField>
		<dataPath>Amount</dataPath>
		<expression>Sum(Amount)</expression>
	</totalField>
