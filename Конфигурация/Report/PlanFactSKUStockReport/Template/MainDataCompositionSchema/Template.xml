				<v8:item>
					<v8:lang>en</v8:lang>
					<v8:content>SKU</v8:content>
				</v8:item>
			</title>
		</field>
		<dataSource>DataSource1</dataSource>
		<query>SELECT
	AnswersSliceLast.SKU,
	BEGINOFPERIOD(AnswersSliceLast.Period, DAY) AS Date,
	AnswersSliceLast.Answer
INTO Fact
FROM
	InformationRegister.Answers.SliceLast(, ) AS AnswersSliceLast
{WHERE
	(AnswersSliceLast.Visit.Date &gt;= &amp;StartDate),
	(AnswersSliceLast.Visit.Date &lt;= ENDOFPERIOD(&amp;EndDate, DAY))}
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	Fact.Date,
	AssortmentMatrixSKUsSliceLast.SKU AS PlanSKU,
	AssortmentMatrixSKUsSliceLast.BaseUnitQty AS PlanQty
INTO Plan
FROM
	InformationRegister.AssortmentMatrixSKUs.SliceLast(, ) AS AssortmentMatrixSKUsSliceLast
		LEFT JOIN Catalog.AssortmentMatrix.Periods AS AssortmentMatrixPeriods
		ON AssortmentMatrixSKUsSliceLast.UUID = AssortmentMatrixPeriods.UUID
		LEFT JOIN Fact AS Fact
		ON AssortmentMatrixSKUsSliceLast.SKU = Fact.SKU
WHERE
	Fact.Date &gt;= AssortmentMatrixPeriods.BeginDate
	AND Fact.Date &lt;= AssortmentMatrixPeriods.EndDate
	AND AssortmentMatrixSKUsSliceLast.SKUStatus &lt;&gt; VALUE(Enum.ValueTableRowStatuses.Deleted)
;

////////////////////////////////////////////////////////////////////////////////
SELECT
	Fact.Date,
	ISNULL(Plan.PlanSKU, Fact.SKU) AS SKU,
	Fact.Answer,
	Plan.PlanQty
FROM
	Plan AS Plan
		FULL JOIN Fact AS Fact
		ON Plan.PlanSKU = Fact.SKU
			AND Plan.Date = Fact.Date</query>
	</dataSet>
